extends layout

block content
   
    <!-- The Modal Pub -->
    div(class="modal hide" id="addId")
        div(class="modal-dialog").card
            div(class="modal-content")
            
            <!-- Nova publicaÃ§ao -->
                <!-- Modal Header -->
                div(class="modal-header")
                    h4(class="modal-title") New Message
                    button(type="button" class="close" data-dismiss="modal") &times
                
                    <!-- Modal body -->
                    div(class="modal-body")
                    form(action='/messages/newPm' method='POST') 
                            label(for='text' class='cols-sm-2 control-label') To
                            br
                            label(for='text' class='cols-sm-2 control-label') Name:
                                input(type="text" name="myName" id="myName" value="")   
                            label(for='text' class='cols-sm-2 control-label') Number:
                                input(type="text" name="myId" id="myId" value="")   
                            div.form-group
                                label(for='text' class='cols-sm-2 control-label') Text
                                textarea(rows="4" cols="50" class='form-control' name='text' id='text') 
                            div.form-group
                                button.btn.btn-primary(type='submit' style='width:100%;' ) Send
                    <!-- Modal footer -->
                    div(class="modal-footer")
                        button(type="button" class="btn btn-danger" data-dismiss="modal") Close
            
    .container-fluid
        .row
        //perfil
        .col-md-3
            .card(style='margin-top: 5rem')
                .card-block
                    h4.card-title
                    b Message from
                ul.list-group.list-group-flush 
                .card-block
                    if(message[0].author1 == userId)
                        h4.card-title
                        b=userI.name
                        .card-block
                            a(data-toggle="modal" data-id=message[0].author1 data-name=userI.name class="open-AddId btn btn-primary" href="#addId") Private message

                    else
                        b=userI.name
                        .card-block
                            a(data-toggle="modal" data-id=message[0].author1 data-name=userI.name class="open-AddId btn btn-primary" href="#addId") Private message


        .row 
            .card(style='margin-top: 5rem')
            .col-md-6.gedf-main
                each m in message
                
                    if(m.author1 == userId)
                        .card(style='margin-top: 5rem')
                            .card-header
                            .card-block
                                .h7.text-muted(style='font-size: 0.8rem; margin-bottom: 1rem')
                                    i.fa.fa-clock-o=m.date
                                    |
                                .row
                                    .col-md-6
                                        .h5
                                            b= m.text
                                        .h7.text-muted(style='font-size: 0.8rem')='@' + m.author1

                    else
                        .card(style='margin-top: 5rem')
                            .card-header
                            .card-block
                                .h7.text-muted(style='font-size: 0.8rem; margin-bottom: 1rem')
                                    i.fa.fa-clock-o=m.date
                                    |
                                .row
                                    .col-md-6
                                        .h5
                                            b= m.text
                                        .h7.text-muted(style='font-size: 0.8rem')='@' + m.author1