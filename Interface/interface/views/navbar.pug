                div(class='container h-100')         
                    div(class='d-flex justify-content-center h-100')
                        div(class='searchbar')
                            input.nav-item(class='search_input' type='text' name='search' placeholder='Search')
                            a.nav-item(class='search_icon')
                                i(type='submit' class='fas fa-search' name='searchIcon')