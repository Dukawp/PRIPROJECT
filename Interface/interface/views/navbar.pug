        .container
            .nav-items.clearfix
                a.nav-item.nav-link(href='/feed') Feed  
                a.nav-item.nav-link(href='/messages') Messages
                a.nav-item.nav-link(href='/groups') Groups  
                a.nav-item.nav-link(href='/events') Events  
                a.nav-item.nav-link(href='/users') Users
                a.nav-item.nav-link(href='/team') Team
