    a(class="navbar-brand" href="/" style='padding-left: 50px;')
                img(src='https://i.imgur.com/HjUcbLu.png' style='max-width:30px; display: inline-block;' class='img-fluid')
                span(style="display: inline-block; margin:5px; color:white;") WorkIT
    button.navbar-toggler.hidden-md-up.pull-xs-right(type='button', data-toggle='collapse', data-target='#navbar') &#x2630;
