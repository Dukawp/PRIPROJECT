extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Log In
        form(action='/auth/login' method='POST')
          div.form-group
            label(for='number' class='cols-sm-2 control-label') Student Number:
            div(class='cols-sm-10')
              div(class='input-group')
                span(class='input-group-addon')
                  i(class='fa fa-user fa' aria-hidden='true')
                input(type='text' class='form-control' name='number' id='number' placeholder='axxxxx')
          div.form-group
            label(for='password' class='cols-sm-2 control-label') Password:
            div(class='cols-sm-10')
              div(class='input-group')
                span(class='input-group-addon')
                  i(class='fa fa-lock fa' aria-hidden='true')
                input(type='password' class='form-control' name='password' id='password' placeholder='*******')     
          br
          div.form-group
            button.btn.btn-secondary(type='submit' style='width:100%;') Login


        a(href='/auth/register')
          button.btn.btn-primary(style='width:100%; padding-top:10px;') Register