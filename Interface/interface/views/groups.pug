extends layout

block content
  .main.container
       button.btn.btn-primary(onclick="window.location.href = '/auth/logout'") Logout
        button.btn.btn-primary(onclick="window.location.href = '/groups/newGroup'") Create New Group
       h1 Groups
        table(border="1")
          tr
            th Name
            th Description
            th Options
            each g in groups
              tr
                td= g.name
                td= g.description
                td
                  button.btn.btn-primary(onclick="joinGroup('" + g._id + "')") Join